extends layout

block content
  .login-container
    h1 Iniciar Sesión

    //- Mensajes de éxito flash (mantenemos en la parte superior)
    if success_msg && success_msg.length
      each msg in success_msg
        .alert.alert-success= msg

    form(action="/auth/login" method="POST")
      .form-group
        label(for="email") Email
        input#email(type="email" name="email" placeholder="ejemplo@correo.com" required value=old_email)
        //- Mostrar sólo el primer mensaje de error justo debajo del input email
        if error_msg && error_msg.length
          .text-danger= error_msg[0]

      .form-group
        label(for="password") Contraseña
        input#password(type="password" name="password" placeholder="********" required)

      button.btn(type="submit") Entrar
