extends layout

block content
  .login-container
    h1 Iniciar Sesión

    //- Mensajes de error flash
    if error_msg && error_msg.length
      each msg in error_msg
        .alert.alert-danger= msg

    //- Mensajes de éxito flash
    if success_msg && success_msg.length
      each msg in success_msg
        .alert.alert-success= msg

    form(action="/auth/login" method="POST")
      .form-group
        label(for="email") Email
        input#email(type="email" name="email" placeholder="ejemplo@correo.com" required)

      .form-group
        label(for="password") Contraseña
        input#password(type="password" name="password" placeholder="********" required)

      button.btn(type="submit") Entrar
